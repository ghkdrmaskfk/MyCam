<!--    <item name="android:windowSplashScreenBrandingImage">@drawable/branding_image</item>-->

    <style name="Theme.MySplashScreen.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground" tools:targetApi="S">@color/color_white</item>
        <item name="windowSplashScreenAnimatedIcon" tools:targetApi="S">@drawable/splash_icon</item>
        <item name="windowSplashScreenAnimationDuration" tools:targetApi="S">1000</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/color_white</item>
        <item name="postSplashScreenTheme">@style/Theme.MyCam</item>
    </style>

